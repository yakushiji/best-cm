= form_for @cm do |f|
  - if @cm.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cm.errors.count, "error")} prohibited this cm from being saved:"
      %ul
        - @cm.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
